        "libs/core/layout/models/core-models/src/index.ts"
      ],
      "@ingeniemos.la/dashboard": [
        "libs/features/dashboard/pages/dashboard/src/index.ts"
      ],
      "@ingeniemos.la/dashboard-models": [
        "libs/features/dashboard/dashboard-models/src/index.ts"
      ],
      "@ingeniemos.la/shared-pipes": [
        "libs/shared/pipes/shared-pipes/src/index.ts"
      ],
      "@ingeniemos.la/sidemenu": [
        "libs/core/layout/components/sidemenu/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
